# Install node('lts'), nvm e yarn 
    - sudo apt update
    - sudo apt upgrade -y 
    - sudo apt install curl -y
    - curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash
    - source ~/.bashrc
    - nvm install --lts
    - nvm alias default 20.9.0 (aqui eu instalei essa vers√£o do node)
    - node -v npm -v
    - npm install --global yarn
    - yarn --version
    
# remover
    - sudo apt-get purge --autoremove nodejs npm